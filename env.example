# Tanawal Admin Portal Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=https://your-api.azurewebsites.net
NEXT_PUBLIC_API_TIMEOUT=10000

# Authentication
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=https://your-admin-portal.azurewebsites.net

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Database (if needed)
DATABASE_URL=your-database-connection-string

# Logging
LOG_LEVEL=info
NODE_ENV=production

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Monitoring
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
